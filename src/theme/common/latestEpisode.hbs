<div class="d-block d-md-flex podcast-entry bg-white mb-5">
  <div class="image" style="background-image: url('images/albums/{{thumbnail}}');"></div>
  <div class="text">
    <h3 class="font-weight-light"><a href="single-post.html">{{episode}}: {{title}}</a></h3>
    <p class="mb-4">{{description}}</p>
    <p>Featuring: {{featuredArtists}}</p>
    <div class="player">
      <audio id="player-latest{{episode}}" class="native-player" preload="none" controls style="max-width: 100%"
        data-length="{{runtime}}" src="{{url}}">
      </audio>
    </div>
  </div>
</div>
